#include <stdio.h>

int main()
{
    int i,j,n,temp;
    
    printf("----------Bubble Sort----------\n");
    printf("Enter a number: ");
    scanf("%d",&n);
    
    int arr[n];
    printf("Enter the %d element:\n",n);
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    
    //bubble sort
    for(i=0;i<n-1;i++){
        for(j=0;j<n-i-1;j++){
            if(arr[j]>arr[j+1]){
                temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
    
    printf("The sorted array in ascending order:\n");
    for(i=0;i<n;i++){
        printf("%d\t",arr[i]);
    }
   
   return 0;
}
